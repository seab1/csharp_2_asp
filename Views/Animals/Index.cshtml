@model IEnumerable<SSuwalaBonjourLeMonde.Models.Animal>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Animals:</h1>
<form asp-controller="Animals" asp-action="Index">
    <p>
        Name: <input type="text" name="id" />
        <input type="submit" value="Filter" />
    </p>
</form>

<p>
    <a class="btn btn-sm btn-primary" asp-action="Create">Create New</a>
</p>
<div class="from-border">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BirthDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BirthDate)
                    </td>
                    <td>
                        <a class="btn btn-sm btn-success" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>